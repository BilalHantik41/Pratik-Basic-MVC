@model Pratik.ViewModels.CustomerOrderViewModel

@{
    ViewData["Title"] = "Müşteri ve Siparişleri";
}

<h2>Müşteri Bilgileri</h2>
<div class="mb-4">
    <p><strong>ID:</strong> @Model.Customer.Id</p>
    <p><strong>Ad:</strong> @Model.Customer.FirstName</p>
    <p><strong>Soyad:</strong> @Model.Customer.LastName</p>
    <p><strong>E-posta:</strong> @Model.Customer.Email</p>
</div>

<h2>Siparişler</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>
